[Unit]
Description=XRandR magic script
Documentation=man:xrandr(1)
Requisite=graphical-session.target
PartOf=reload-desktop@.target
After=graphical-session.target
Before=hlwm-panels.service

[Service]
Type=oneshot
ExecStart=%E/herbstluftwm/utils/xrandr-magic %I
ExecStartPost=/bin/sleep 0.5

[Install]
WantedBy=reload-desktop@.target
