[Unit]
Description=XScreenSaver Utility
Documentation=man:xss-lock(1)
PartOf=graphical-session.target
After=graphical-session.target
Before=xset-xss.service

[Service]
Type=simple
Environment="UTILS=%E/herbstluftwm/utils"
ExecStart=/usr/bin/xss-lock -s ${XDG_SESSION_ID} --ignore-sleep -n ${UTILS}/dim-screen.sh -- systemctl --user --wait start lock.target
Restart=on-failure
RestartSec=2

[Install]
WantedBy=graphical-session.target
